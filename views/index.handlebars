<h1>Welcome to Burgers!</h1>

<div class="row">
<div class="col-sm-6">
  <h2>Burgers that are not devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
</div>
<div class="col-sm-6">
  <h2>Burgers that are devoured!</h2>
  <ul class="devoured_bu">
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
  </div>
</div>
<h2>Add a Burger</h2>
<div class="row" id="addburger">
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="burger_name">
      </div>

      <div class="form-group">
        <label for="devoured">Devour it ?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
      </div>

      <button type="submit">Add Burger</button>
    </form>
</div>